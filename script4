const span = document.querySelector('#hi')

console.log(span.getAttribute('data-test'))
//get collection of data 
console.log(span.dataset)

//add new class
span.classList.add("new-class3")

//remove class
span.classList.remove('class1')

//toggle, remove or add
span.classList.toggle("class-to", true)

//css 
span.style.color ='red'

//backgroundColor, css property convert to camel case
span.style.backgroundColor = 'yellow'
